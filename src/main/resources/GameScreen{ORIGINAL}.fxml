<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controller.GameScreenController">
  <ImageView fitHeight="1080.0" fitWidth="1920.0">
    <Image url="@bg_main.jpg" />
  </ImageView>
  <HBox spacing="10">
    <Button fx:id="pauseButton" scaleX="0.4" scaleY="0.4" style="-fx-background-color: transparent;" text="" translateX="-60" translateY="-60" />
    <Button fx:id="helpButton" scaleX="0.4" scaleY="0.4" style="-fx-background-color: transparent;" text="" translateX="1530" translateY="-60" />
  </HBox>
   <Rectangle fx:id="platform_current_standing" arcHeight="5.0" arcWidth="5.0" fill="#252525" height="400.0" layoutX="200.0" opacity="0.95" stroke="BLACK" strokeType="INSIDE" translateX="-700.0" translateY="340.0" width="200.0" x="200.0" />
   <Rectangle fx:id="stick" arcHeight="5.0" arcWidth="5.0" height="10.0" rotate="0" stroke="BLACK" strokeType="INSIDE" translateX="-525.0" translateY="72.0" width="7.0" />
   <Rectangle fx:id="platform_next_target" arcHeight="5.0" arcWidth="5.0" fill="#252525" height="400.0" opacity="0.95" stroke="BLACK" strokeType="INSIDE" translateX="-400.0" translateY="340.0" width="75.0" x="200.0" />
   <Rectangle fx:id="perfecttarget" arcHeight="5.0" arcWidth="5.0" fill="#ff5c5c" height="10.0" opacity="0.95" stroke="BLACK" strokeType="INSIDE" translateX="-400.0" translateY="145.0" width="15.0" x="200.0" />
   <Rectangle fx:id="player" arcHeight="5.0" arcWidth="5.0" fill="#360000" height="60.0" opacity="0.95" stroke="BLACK" strokeType="INSIDE" translateX="-620.0" translateY="110.0" width="25.0" x="200.0" />
   <Text strokeType="OUTSIDE" strokeWidth="0.0" text="4" translateY="-400.0">
      <font>
         <Font size="85.0" />
      </font>
   </Text>
   <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Best: 14" translateY="-315.0">
      <font>
         <Font size="55.0" />
      </font>
   </Text>
</StackPane>
