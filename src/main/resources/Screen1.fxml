<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.effect.GaussianBlur?>

<StackPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.controller.Screen1Controller">
  <ImageView>
    <Image url="@bg.jpg" />
    <effect>
      <GaussianBlur radius="30" />
    </effect>
  </ImageView>

  <!-- HBox for buttons with transparent background -->
  <HBox spacing="10">
    <Button fx:id="switchButton" text="Switch to Screen 2" style="-fx-background-color: transparent;"/>
    <Button fx:id="volumeButton" text="" style="-fx-background-color: transparent;"/>
  </HBox>
</StackPane>
